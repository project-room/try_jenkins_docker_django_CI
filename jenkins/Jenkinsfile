pipeline {
    agent none

    stages {
        stage('Build image') {
            agent any
            steps {
                sh 'docker build -t 176.122.188.100:16000/test:${BUILD_NUMBER} .'
            }
        }

        stage('Push image') {
            agent any
            steps {
                sh 'docker push 176.122.188.100:16000/test:${BUILD_NUMBER}'
                sh 'echo "Current images:'
                sh 'curl http://176.122.188.100:16000/v2/test/tags/list'
            }
        }
    }
}